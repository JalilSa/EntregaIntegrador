<form action="/register" method="post">
  <label for="first_name">Nombre:</label><br>
  <input type="text" id="first_name" name="first_name"><br>

  <label for="last_name">Apellido:</label><br>
  <input type="text" id="last_name" name="last_name"><br>

  <label for="email">Correo Electrónico:</label><br>
  <input type="email" id="email" name="email"><br>

  <label for="age">Edad:</label><br>
  <input type="number" id="age" name="age" min="1"><br>

  <label for="password">Contraseña:</label><br>
  <input type="password" id="password" name="password"><br>

  <!-- Checkbox para elegir ser usuario premium -->
  <input type="checkbox" id="is_premium" name="is_premium">
  <label for="is_premium">Registrarme como usuario Premium</label><br>

  <input type="submit" value="Registrar">
</form>
